{
  "compilerOptions": {
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2017",
    "module": "ESNext",
    "paths": {
      "@services/*": ["./services/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@screens/*": ["./screens/*"],
      "@components/*": ["./components/*"],
      "@assets/*": ["./assets/*"],
      "@types/*": ["./types/*"],
      "@config/*": ["./config/*"]
    }
  }
}
